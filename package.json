{
    "name": "vscode-pintia",
    "displayName": "PTA",
    "description": "Solve PTA problems in VS Code",
    "version": "0.0.1",
    "author": "Zhichao Jin",
    "publisher": "jinzcdev",
    "engines": {
        "vscode": "^1.66.0"
    },
    "categories": [
        "Education",
        "Other",
        "Snippets"
    ],
    "activationEvents": [
        "onView:pintiaExplorer",
        "onCommand:pintia.signIn",
        "onCommand:pintia.signOut"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "pintia",
                    "title": "PTA",
                    "icon": "resources/pta_logo.svg"
                }
            ]
        },
        "views": {
            "pintia": [
                {
                    "id": "pintiaExplorer",
                    "name": "Problems"
                }
            ]
        },
        "commands": [
            {
                "command": "pintia.deleteCache",
                "title": "Delete Cache",
                "category": "PTA"
            },
            {
                "command": "pintia.togglePTACn",
                "title": "Switch Endpoint",
                "category": "PTA",
                "icon": "$(globe)"
            },
            {
                "command": "pintia.signIn",
                "title": "Sign In",
                "category": "PTA",
                "icon": "$(sign-in)"
            },
            {
                "command": "pintia.signOut",
                "title": "Sign Out",
                "category": "PTA"
            },
            {
                "command": "pintia.manageSessions",
                "title": "Manage Sessions",
                "category": "PTA"
            },
            {
                "command": "pintia.refreshExplorer",
                "title": "Refresh",
                "category": "PTA",
                "icon": "$(refresh)"
            },
            {
                "command": "pintia.pickOne",
                "title": "Pick One",
                "category": "PTA"
            },
            {
                "command": "pintia.showProblem",
                "title": "Show Problem",
                "category": "PTA"
            },
            {
                "command": "pintia.previewProblem",
                "title": "Preview Problem",
                "category": "PTA"
            },
            {
                "command": "pintia.searchProblem",
                "title": "Search Problem",
                "category": "PTA",
                "icon": "$(search)"
            },
            {
                "command": "pintia.showSolution",
                "title": "Show Top Voted Solution",
                "category": "PTA"
            },
            {
                "command": "pintia.testSolution",
                "title": "Test in PTA",
                "category": "PTA"
            },
            {
                "command": "pintia.submitSolution",
                "title": "Submit to PTA",
                "category": "PTA"
            },
            {
                "command": "pintia.addFavorite",
                "title": "Add to Favorite List",
                "category": "PTA",
                "icon": {
                    "light": "resources/light/like.png",
                    "dark": "resources/dark/like.png"
                }
            },
            {
                "command": "pintia.removeFavorite",
                "title": "Remove from Favorite List",
                "category": "PTA",
                "icon": {
                    "light": "resources/light/dislike.png",
                    "dark": "resources/dark/dislike.png"
                }
            },
            {
                "command": "pintia.switchDefaultLanguage",
                "title": "Switch Default Language",
                "category": "PTA"
            },
            {
                "command": "pintia.problems.sort",
                "title": "Sort Problems",
                "category": "PTA",
                "icon": "$(sort-precedence)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/glob": "^7.1.3",
        "@types/markdown-it": "^12.2.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^14.18.21",
        "@types/node-fetch": "^2.6.2",
        "@types/qrcode": "^1.4.2",
        "@types/vscode": "^1.68.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "glob": "^7.2.3",
        "mocha": "^10.0.0",
        "node-fetch": "^2.6.7",
        "qrcode": "^1.5.0",
        "typescript": "^4.7.4",
        "vscode-test": "^1.5.0"
    },
    "dependencies": {
        "fs-extra": "^10.1.0",
        "katex": "^0.16.0",
        "markdown-it": "^12.2.3",
        "markdown-it-texmath": "^1.0.0"
    }
}
