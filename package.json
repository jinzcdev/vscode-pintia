{
    "name": "vscode-pintia",
    "displayName": "Pintia",
    "description": "Solve PTA problems in VS Code",
    "version": "0.1.4",
    "author": "Zhichao Jin",
    "publisher": "jinzcdev",
    "license": "MIT",
    "icon": "resources/imgs/pta_logo.png",
    "engines": {
        "vscode": "^1.66.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jinzcdev/vscode-pintia"
    },
    "homepage": "https://github.com/jinzcdev/vscode-pintia",
    "keywords": [
        "pintia",
        "pta",
        "pat",
        "algorithm",
        "oj"
    ],
    "preview": true,
    "categories": [
        "Other",
        "Snippets"
    ],
    "activationEvents": [
        "onCommand:pintia.openPintiaHome",
        "onCommand:pintia.clearCache",
        "onCommand:pintia.signIn",
        "onCommand:pintia.signOut",
        "onCommand:pintia.refreshExplorer",
        "onCommand:pintia.checkIn",
        "onCommand:pintia.changeDefaultLanguage",
        "onCommand:pintia.changeWorkspaceFolder",
        "onCommand:pintia.reportIssue",
        "onView:pintiaExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "pintia",
                    "title": "PTA",
                    "icon": "resources/imgs/pta_logo.svg"
                }
            ]
        },
        "views": {
            "pintia": [
                {
                    "id": "pintiaExplorer",
                    "name": "Problems"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "pintia.openPintiaHome",
                    "when": "view == pintiaExplorer",
                    "group": "navigation@0"
                },
                {
                    "command": "pintia.signIn",
                    "when": "view == pintiaExplorer",
                    "group": "navigation@1"
                },
                {
                    "command": "pintia.refreshExplorer",
                    "when": "view == pintiaExplorer",
                    "group": "navigation@2"
                },
                {
                    "command": "pintia.reportIssue",
                    "when": "view == pintiaExplorer",
                    "group": "navigation@3"
                }
            ]
        },
        "commands": [
            {
                "command": "pintia.openPintiaHome",
                "title": "Open PTA Home",
                "category": "Pintia",
                "icon": "$(globe)"
            },
            {
                "command": "pintia.clearCache",
                "title": "Clear Cache",
                "category": "Pintia"
            },
            {
                "command": "pintia.signIn",
                "title": "Sign In",
                "category": "Pintia",
                "icon": "$(sign-in)"
            },
            {
                "command": "pintia.signOut",
                "title": "Sign Out",
                "category": "Pintia"
            },
            {
                "command": "pintia.refreshExplorer",
                "title": "Refresh",
                "category": "Pintia",
                "icon": "$(refresh)"
            },
            {
                "command": "pintia.changeDefaultLanguage",
                "title": "Change Default Language",
                "category": "Pintia"
            },
            {
                "command": "pintia.changeWorkspaceFolder",
                "title": "Change Workspace Folder",
                "category": "Pintia"
            },
            {
                "command": "pintia.checkIn",
                "title": "Check In PTA",
                "category": "Pintia"
            },
            {
                "command": "pintia.reportIssue",
                "title": "Report Issue",
                "category": "Pintia",
                "icon": "$(comment)"
            }
        ],
        "configuration": {
            "title": "Pintia",
            "properties": {
                "pintia.workspaceFolder": {
                    "type": "string",
                    "scope": "application",
                    "description": "The path of the workspace folder to store the problem files.",
                    "default": ""
                },
                "pintia.paging.pageSize": {
                    "type": "number",
                    "default": 100,
                    "enum": [
                        0,
                        25,
                        50,
                        75,
                        100,
                        125,
                        150,
                        200
                    ],
                    "scope": "application",
                    "description": "Whether to page the problem list when the problem set is too large. It is not paged when pageSize is 0."
                },
                "pintia.showLocked": {
                    "type": "boolean",
                    "default": true,
                    "scope": "application",
                    "description": "Show locked problems."
                },
                "pintia.enableStatusBar": {
                    "type": "boolean",
                    "default": true,
                    "scope": "application",
                    "description": "Specify whether the Pintia status bar will be shown or not."
                },
                "pintia.autoCheckIn": {
                    "type": "boolean",
                    "default": false,
                    "scope": "application",
                    "description": "Specify whether to check in Pintia's education supermarket or not when the Pintia Extension is activated."
                },
                "pintia.defaultLanguage": {
                    "type": "string",
                    "default": "C++ (g++)",
                    "enum": [
                        "C (gcc)",
                        "C++ (g++)",
                        "C (clang)",
                        "C++ (clang++)",
                        "Java (javac)",
                        "Python (python2)",
                        "Python (python3)",
                        "Ruby (ruby)",
                        "Bash (bash)",
                        "Plaintext (cat)",
                        "CommonLisp  (sbcl)",
                        "Pascal (fpc)",
                        "Go (go)",
                        "Haskell (ghc)",
                        "Lua (lua)",
                        "Lua (luajit)",
                        "C# (mcs)",
                        "JavaScript (node)",
                        "OCaml (ocamlc)",
                        "PHP (php)",
                        "Perl (perl)",
                        "AWK (awk)",
                        "D (dmd)",
                        "Racket (racket)",
                        "Vala (valac)",
                        "Visual Basic (vbnc)",
                        "Kotlin (kotlinc)",
                        "Swift (swiftc)",
                        "Objective-C (gcc)",
                        "Fortran95 (gfortran)",
                        "Octave (octave-cli)",
                        "R (R)",
                        "ASM (nasm.sh)",
                        "Rust (rustc)",
                        "Scala (scalac)",
                        "Python (pypy3)",
                        "SQL (SQL)"
                    ],
                    "scope": "application",
                    "description": "Default language for solving the problems."
                },
                "pintia.editor.shortcuts": {
                    "type": "array",
                    "default": [
                        "submit",
                        "test"
                    ],
                    "scope": "application",
                    "items": {
                        "type": "string",
                        "enum": [
                            "submit",
                            "test"
                        ],
                        "enumDescriptions": [
                            "Submit your answer to pintia.",
                            "Test your answer with customized test cases."
                        ]
                    },
                    "description": "Customize the shortcuts in editors."
                }
            }
        },
        "snippets": [
            {
                "language": "c",
                "path": "./snippets/snippets.json"
            },
            {
                "language": "cpp",
                "path": "./snippets/snippets.json"
            },
            {
                "language": "python",
                "path": "./snippets/snippets.json"
            },
            {
                "language": "java",
                "path": "./snippets/snippets.json"
            },
            {
                "language": "javascript",
                "path": "./snippets/snippets.json"
            },
            {
                "language": "csharp",
                "path": "./snippets/snippets.json"
            },
            {
                "language": "go",
                "path": "./snippets/snippets.json"
            },
            {
                "language": "swift",
                "path": "./snippets/snippets.json"
            },
            {
                "language": "vb",
                "path": "./snippets/snippets.json"
            },
            {
                "language": "groovy",
                "path": "./snippets/snippets.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/glob": "^7.1.3",
        "@types/markdown-it": "^12.2.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^14.18.21",
        "@types/node-fetch": "^2.6.2",
        "@types/qrcode": "^1.4.2",
        "@types/vscode": "^1.66.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "glob": "^7.2.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "vscode-test": "^1.5.0"
    },
    "dependencies": {
        "fs-extra": "^10.1.0",
        "highlight.js": "^11.6.0",
        "markdown-it": "^12.2.3",
        "markdown-it-katex": "2.0.2",
        "markdown-it-replace-link": "1.1.0",
        "node-fetch": "^2.6.7",
        "qrcode": "^1.5.0"
    }
}
